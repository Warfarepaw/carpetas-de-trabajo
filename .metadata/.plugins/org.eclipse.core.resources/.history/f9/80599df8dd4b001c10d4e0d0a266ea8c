package example;

public class example {
	
	public static void main(String[] args) {
		evaluate();
		
	}

	static public void evaluate() 
	{
		int number = 2;
		
		int newnum = number%2;
		
		if(newnum==0) 
		{
			System.out.println("the number its an odd");
		}else 
		{
			System.out.println("the number its an non");
		}
	}
}
